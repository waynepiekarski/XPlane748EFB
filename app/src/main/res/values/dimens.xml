<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Size of the about and info text on small devices, large devices are in sw600dp -->
    <dimen name="about_text_size">15dp</dimen>
    <dimen name="about_text_padding">10dp</dimen>
    <dimen name="about_text_width">100dp</dimen> <!-- Recomputed to fit over text -->
    <dimen name="connect_text_size">15dp</dimen>
    <dimen name="connect_text_padding">2dp</dimen>

    <!-- Need to specify something for the initial layout, but it will be recomputed -->
    <dimen name="cdu_top_padding">10dp</dimen>
    <dimen name="cdu_left_padding">100dp</dimen>

    <!-- Need to specify a default X scale for the font, but it will be recomputed -->
    <dimen name="cdu_large_text_scale_x">1.0</dimen>
    <dimen name="cdu_small_text_scale_x">1.0</dimen>
    <dimen name="cdu_label_text_scale_x">1.0</dimen>

    <!-- The layout preview needs a decent font size, but it will be recomputed -->
    <dimen name="cdu_large_text_font_size">23sp</dimen>
    <dimen name="cdu_small_text_font_size">23sp</dimen>
    <dimen name="cdu_label_text_font_size">23sp</dimen>

    <!-- Spacers between the labels in case we want to tweak this programmatically -->
    <dimen name="cdu_spacer_height">0px</dimen>

    <!-- Negative margins used to bring the TextViews closwer together than normally possible -->
    <dimen name="cdu_large_margin">-5dp</dimen>
    <dimen name="cdu_small_margin">-5dp</dimen>
    <dimen name="cdu_label_margin">-5dp</dimen>

</resources>
